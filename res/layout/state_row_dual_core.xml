<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_state_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ui_submenu_dual_core_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ui_freq_text"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".35"
            android:text="MHz"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ui_duration_text"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:text="100:23:12" />

        <TextView
            android:id="@+id/ui_percentage_text"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="44%" />

        <TextView
            android:id="@+id/ui_duration_text_cpu1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:text="100:23:12" />

        <TextView
            android:id="@+id/ui_percentage_text_cpu1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:text="66%" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_submenu_dual_core_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight=".35"
            android:max="100" />

        <ProgressBar
            android:id="@+id/ui_bar_core0"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight=".30"
            android:max="100" />

        <ProgressBar
            android:id="@+id/ui_bar_core1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight=".30"
            android:max="100" />
    </LinearLayout>

</LinearLayout>